package treino;
import java.util.Scanner;
public class Treino {
public static void main(String[] args) {
float nota1,nota2,nota3,total,media;
Scanner teclado=new Scanner(System.in);
System.out.println("Escreva sua primeira nota");
nota1 =teclado.nextFloat();
System.out.println("Escreva sua segunda nota");
nota2 =teclado.nextFloat();
System.out.println("Escreva sua terceira nota");
nota3 =teclado.nextFloat();
total= nota1+nota2+nota3;
media= total/3;
if (media>=0 && media<3) System.out.println("Reprovado");
else if(media>=3 && media<7) System.out.println("Exame");
else System.out.println("Aprovado");
 }
}
