package exercise4;
import java.util.Scanner;
public class exercise4 {
public static void main(String[] args) {
 int n1,dobro, triplo;
Scanner teclado=new Scanner(System.in);
System.out.println("Escreva um número");
n1 =teclado.nextInt();
dobro= n1*2;
triplo= n1*3;
if (n1>=0) System.out.println("Resultado é " +dobro);
else{
 System.out.println("Resultado é " +triplo);
}
 }
}
